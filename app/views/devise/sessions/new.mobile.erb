<div class="content">
	<div class="span12-12"><h3><i class="fa fa-key"></i> Sign In <small>So we get to know each other again..</small></h3></div>
	<div class="span12-12">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="dq-form">
			<div class="field10-10"><%= f.email_field :email, :placeholder => "Email Address" %></div>
			<div class="field10-10"><%= f.password_field :password, :placeholder => "Password" %></div>
		    <% if devise_mapping.rememberable? -%>
		      <div class="field10-10"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		    <% end -%>
			<div class="dq-buttons">
				<%= f.submit :value => "Sign In", :class => "full" %>
			</div>
		</div>
		<% end %>

		<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		<div class="dq-buttons">
			<%= link_to "Create an Account", new_registration_path(resource_name), :class => "lnk-button full" %><br />
		</div>
		<% end -%>

	</div>
</div>
