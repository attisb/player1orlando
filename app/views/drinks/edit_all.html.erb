<div class="content">
	<div class="span12-12"><h2><i class="fa fa-pencil"></i> Edit All Drinks <small>Filling out forms area great.</small></h2></div>
	<div class="span12-12">

<%= form_for :drink, :url => update_all_drinks_path, :html => { :method => :put } do %>
<div class="dq-form">
    <% @drinks.each do |drink| %>
      <%= fields_for "drink[]", drink do |drink_fields| %>
		<div class="field5-10"><%= drink.name %> (<%= drink.dispense_type %>)</div>
		<div class="field2-10"><%= drink_fields.check_box :visible %><%= drink_fields.label :visible, "Visible?" %></div>
		<div class="field2-10"><%= drink_fields.check_box :call_out %><%= drink_fields.label :call_out, "Call Out?" %></div>
		<div class="field1-10"><%= drink_fields.check_box :tracker %><%= drink_fields.label :tracker, "Track?" %></div>
      <% end %>
    <% end %>
	<div class="dq-buttons">
		<%= submit_tag %>
	</div>
</div>
<% end %>

	</div>
</div>
