<div class="span12-12"><h2><i class="fa fa-beer"></i> Drinks<small>Gaming without poitions...wrong.</small></h2></div>
<div class="span12-12"><h4><%= @dispense_type_name[params[:dispense_type]] -%></h4></div>

<div class="span12-12">
	<h4><%= @dispense_type_name[params[:dispense_type]] -%><small>Here is what we got.</small></h4>
	
	<ul class="unstyled pad pad-top showlines">
		<% @drinks.order(name: :asc).each do |drink| %>
			<li>
				<strong class="large">
					<div class="float-right">ABV <%= drink.abv %>% // <% if drink.price > 0 -%><%= number_to_currency drink.price -%><% end -%></div>
					<%= drink.name -%>
				</strong>
				<div>
					<div class="float-right"><%= drink.beer_style.name -%></div>
					<%= drink.brewery -%>
				</div>
			</li>
		<% end %>
	</ul>
</div>
