<div class="span12-12"><img src="/includes/logo_print.png" height="60" /><h4 class="float-right"><%= @dispense_type_name[params[:dispense_type]] -%><small>Subject to Availability</small></h4></div>
<div class="span12-12"><h5>Visit Player1Orlando.com for the most up to date drink lists and keep track of what you've tried.</h5></div>

<div class="span12-12">
	<ul class="unstyled pad-top showlines">

			<% @drinks.order(name: :asc).each do |drink| %>
				<% if drink.call_out? %>
				<li class="callout" id="drink<%= drink.id -%>">
				<% else %>
				<li>
				<% end %>

					<div class="nobreak">
					<% if @drinks.count >= 40 %>
						<strong>
					<% else %>
						<strong class="large">
					<% end %>
					
					<% if drink.quick_style == "4" %>
						<div class="newtype">&nbsp;</div>
					<% else %>
						<div class="newtype">NEW</div>
					<% end %>
					
						<div class="float-right"><a href="#" onclick="document.getElementById('drink_desc<%= drink.id -%>').style.display = 'inline';">Show Description</a> | <a href="#" onclick="document.getElementById('drink<%= drink.id -%>').style.display = 'none';">Hide Drink</a>  ABV <%= drink.abv %>% // <% if drink.price > 0 -%><%= number_to_currency drink.price -%><% end -%></div>
						<%= drink.name -%>
					</strong>
					<div class="small">
						<div class="float-right"><%= drink.beer_style.name -%></div>
						<%= drink.brewery -%>
					</div>
					<p id="drink_desc<%= drink.id -%>" contenteditable="true"><%= drink.description -%></p>
					</div>
				</li>
			<% end %>


	</ul>
</div>
