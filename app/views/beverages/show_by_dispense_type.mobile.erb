<% title @dispense_type_name[params[:dispense_type]] %>

<!-- Standard Content -->
<div class="content">
	<div class="span12-12"><h2><i class="fa fa-beer"></i> Drinks<small>Gaming without poitions...wrong.</small></h2></div>
	
	<div class="span8-12">
		<h4><%= @dispense_type_name[params[:dispense_type]] -%><small>Here is what we got.</small></h4>
		
		<ul class="unstyled lined pad">
			<% @drinks.where(:visible => true).order(name: :asc).each do |drink| %>
				<% if drink.call_out? %>
				<li class="callout_box">
				<% else %>
				<li>
				<% end %>
					<strong class="large"><div class="thumbnail-image text-center"><%= image_tag drink.drink_image.thumb -%></div>  <%= link_to drink.name, drink_path(drink) -%><div class="small"><%= drink.brewery -%></div></strong><div><div class="float-right"><% if drink.price > 0 -%><%= number_to_currency drink.price -%><% end -%></div><%= drink.beer_style.name -%></div>
				</li>
			<% end %>
		</ul>
	</div>
	
	<div class="span4-12">
		<%= render 'shared/drink_search_form' %>
		<div class="dq-buttons pad-bottom">
			<%= link_to 'Go Back', beverages_path, :class => "lnk-button full" %>
		</div>
	</div>
	
</div>