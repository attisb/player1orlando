<h5>Search Drinks</h5>

<%= form_tag drinks_path, method: :get do %>
<div class="dq-form pad-bottom">
	<div class="field7-10"><%= text_field_tag :query, params[:query], :placeholder => "Search for a Drink" %></div>
	<div class="field3-10">
		<%= submit_tag "Search Drinks", name: nil, :class => "full" %>
	</div>
</div>
<% end %>