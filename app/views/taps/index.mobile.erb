<% title "What's on Tap" %>

<div class="content">
	<div class="span12-12"><h3><i class="fa fa-beer"></i> On Tap<small>Let's go right down the line.</small></h3></div>
	<div class="span12-12">

		<ul class="unstyled lined taplist">
			<% (1..@total_taps.to_i).each do |i| %>
				<li>
					<h4 class="thumbnail-image" style="height: 70px">#<%= i -%></h4>
					<% if @drinks.where(:tab_index => i).count > 0 %>
						<% drink = @drinks.where(:tab_index => i).first %>
						<strong><%= link_to drink.name, drink_path(drink) -%></strong>
						<%= drink.brewery %>
					<% else %>
						<p>Nothing on this tap. Check back.</p>
					<% end %>
				</li>
			<% end %>
		</ul>		
	</div>
</div>
		