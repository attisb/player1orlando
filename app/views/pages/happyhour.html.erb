<% title "Happy Hour Cover Voucher" %>
<!-- Standard Content -->
<div class="content">
	<div class="span12-12"><h2><i class="fa fa-clock-o"></i> Happy Hour<small>Awesome deals on craft beer.</small></h2></div>

	<% if Time.now.localtime >= Time.parse("4pm").localtime && Time.now.localtime <= Time.parse("11:10pm").localtime %>
	<div class="span12-12">
		<h1 class="text-center"><i class="fa fa-ticket"></i></h1>
		<h4 class="text-center">Happy Hour Cover<small>Valid today only between open and 8pm.</small></h4>
	</div>
	<% end %>
	
	<%= Time.now.in_time_zone('Eastern Time (US & Canada)') %>

</div>