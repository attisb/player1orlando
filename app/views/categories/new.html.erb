<div class="content">
	<div class="span12-12"><h2><i class="fa fa-pencil"></i> Create Categories <small>Filling out forms area great.</small></h2></div>
	<div class="span8-12">
		<%= render 'form' %>
	</div>

	<div class="span4-12">
		<h5>Admin Options</h5>
		<div class="dq-buttons">
			<% if @category.area == "drinks" %>
				<%= link_to 'Go Back to Categories', beverages_path, :class => "lnk-button full back" %>
				<%= link_to 'Destroy Drink Category', @category, method: :delete, data: { confirm: 'Are you sure? This will destory all items under this category as well. It is recommended to just change the visibilty of the category.' }, :class => "lnk-button full cancel delete" %>
			<% elsif @category.area == "games" %>
				<%= link_to 'Go Back to Categories', play_path, :class => "lnk-button full back" %>
				<%= link_to 'Destroy Game Category', @category, method: :delete, data: { confirm: 'Are you sure? This will destory all items under this category as well. It is recommended to just change the visibilty of the category.' }, :class => "lnk-button full cancel delete" %>
			<% end %>
		</div>
	</div>
</div>
