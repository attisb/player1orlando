<% title @beer_style.name %>

<div class="content">
	<div class="span12-12"><h3><i class="fa fa-beer"></i> Beer Styles<small>What means what?</small></h3></div>
	<div class="span12-12">
		<h4><%= @beer_style.name -%><small>This is what is all means.</small></h4>
		<%= simple_format @beer_style.description -%>

		
		<% if @beer_style.drinks.where(:visible => true).count > 0 %>
		<h4>Beers that we serve<small>Here are some beers that we have that are this style.</small></h4>		
		<ul class="unstyled">
			<% @beer_style.drinks.where(:visible => true).order(name: :asc).limit(10).each do |drink| %>
				<li><strong class="large"><%= link_to drink.name, drink_path(drink) -%></strong><%= simple_format drink.description -%></li>
			<% end %>
		</ul>
		<% end %>

	</div>

	<div class="span12-12">
		<div class="dq-buttons pad-bottom">
			<%= link_to 'Go Back to Beer Styles', beer_styles_path, :class => "lnk-button full" %>
			<%= link_to 'Go Back to Beverages', beverages_path, :class => "lnk-button full" %>
		</div>
	</div>
</div>
